<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--border-->
    <item>
        <shape>
            <solid android:color="#ffffff"/>
            <corners android:radius="15dp"/>
            <padding
                android:bottom="1dp"
                android:top="1dp"
                android:right="5dp"
                android:left="5dp"/>
        </shape>
    </item>
    <!--body-->
    <item
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#96ff2700"/>
            <gradient android:startColor="#fff"
                android:endColor="#fff"
                android:centerColor="#3204fa00"/>
            <corners android:radius="15dp"/>
            <padding
                android:bottom="2dp"
                android:top="2dp"
                android:right="2dp"
                android:left="2dp"/>
        </shape>

    </item>
</layer-list>